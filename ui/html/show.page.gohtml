{{template "base" .}}

{{define "title"}}Snip #{{.Snip.Id}}{{end}}

{{define "main"}}
    {{with .Snip}}
        <div class='snippet'>
            <div class='metadata'> 
                <strong>{{.Title}}</strong> 
                <span>#{{.Id}}</span>
            </div>
            <pre><code>{{.Content}}</code></pre>
            <div class='metadata'>
                <time>Created: {{.Created}}</time>
            </div>
        </div>
    {{end}}
{{end}}